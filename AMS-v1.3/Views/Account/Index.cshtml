@model AMS_v1._3.Models.parent

@{
    Layout = null;
}
<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <script src="/docs/5.3/assets/js/color-modes.js"></script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.122.0">
    <title>Allowance Management System</title>

    <link href="~/Scripts/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/Contents/LoginStyle.css" rel="stylesheet" />
    <meta name="theme-color" content="#712cf9">



</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
   
    <main class="form-signin w-100 m-auto">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            <h1 class="h3 mb-3 fw-normal">Allowance Management System</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label class="text-danger">@ViewBag.Notification</label>
                </div>
            </div>

            <div class="form-floating">
               
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @id = "floatingInput",@required=true } })
                @Html.LabelFor(model => model.username, htmlAttributes: new { @for = "floatingInput" })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating">

                @Html.EditorFor(model => model.passwd, new { htmlAttributes = new { @class = "form-control", @id = "floatingInput",@type = "Password",@required = true } })
                @Html.LabelFor(model => model.passwd, htmlAttributes: new { @for = "floatingInput" })
                @Html.ValidationMessageFor(model => model.passwd, "", new { @class = "text-danger" })
            </div>
           
            <input type="submit" value="Sign in" class="btn btn-primary w-100 py-2" />
            <a class="btn btn-danger w-100 py-2" href="@Url.Action("Register")">Register Here</a>

            <p class="mt-5 mb-3 text-body-secondary">&copy; 2024</p>
        }
    </main>
    <script src="~/Scripts/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
